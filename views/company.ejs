<body>
    <div id="sidebar-container"></div>
    <%- include('partials/sidebar', { user: student }) %> <!-- ส่งข้อมูล student ไปที่ sidebar -->
    
    <div class="main-content">
        <div class="header">
            <span class="material-symbols-outlined">menu</span>
            <h5>รายชื่อบริษัทที่เปิดรับนักศึกษาฝึกงาน</h2>
            <span class="material-symbols-outlined">more_vert</span>
        </div>
    <input type="text" id="search-input" placeholder="ค้นหาชื่อบริษัทหรือตำแหน่งงาน..." onkeyup="filterCompanies()">

    <table>
        <thead>
            <tr>
                <th>ชื่อบริษัท</th>
                <th>ตำแหน่งงาน</th>
                <th>รายละเอียด</th>
            </tr>
        </thead>
        <tbody id="company-table">
            <!-- ข้อมูลบริษัทจะถูกแสดงที่นี่ -->
        </tbody>
    </table>

    <div id="company-details-modal">
        <div class="modal-content">
            <h3>รายละเอียดตำแหน่งงาน</h3>
            <p><strong>ชื่อบริษัท:</strong> <span id="modal-company-name"></span></p>
            <p><strong>ตำแหน่งงาน:</strong> <span id="modal-position-title"></span></p>
            <p><strong>จำนวนที่เปิดรับ:</strong> <span id="modal-vacancies"></span></p>
            <p><strong>รายละเอียดงาน:</strong> <span id="modal-job-description"></span></p>
            <p><strong>ที่อยู่:</strong> <span id="modal-address"></span></p>
            <p><strong>เบอร์โทร:</strong> <span id="modal-phone"></span></p>
            <p><strong>อีเมล:</strong> <span id="modal-email"></span></p>

            <div class="button-container">
                <button onclick="closeModal()">ปิด</button>
            </div>
        </div>
    </div>
</div>
    <div id="footer-container"></div>
        <!-- รวม footer -->
        <%- include('partials/footer.html') %>

    <script>
        var companies = <%- JSON.stringify(companies) %>; // Dynamic data from server

        function createCompanyTable(companiesList) {
            var tableBody = document.getElementById('company-table');
            tableBody.innerHTML = ''; // ลบข้อมูลเดิมก่อน

            companiesList.forEach(function (company) {
                company.positions.forEach(function (position) {
                    var row = document.createElement('tr');

                    var nameCell = document.createElement('td');
                    nameCell.innerText = company.name;
                    row.appendChild(nameCell);

                    var positionCell = document.createElement('td');
                    positionCell.innerText = position.position_name;
                    row.appendChild(positionCell);

                    var detailsCell = document.createElement('td');
                    var detailsButton = document.createElement('button');
                    detailsButton.innerText = 'ดูรายละเอียด';
                    detailsButton.onclick = function () { showCompanyDetails(company, position); };
                    detailsCell.appendChild(detailsButton);
                    row.appendChild(detailsCell);

                    tableBody.appendChild(row);
                });
            });
        }

        function showCompanyDetails(company, position) {
            document.getElementById('modal-company-name').innerText = company.name;
            document.getElementById('modal-position-title').innerText = position.position_name;
            document.getElementById('modal-vacancies').innerText = position.number_of_open;
            document.getElementById('modal-job-description').innerText = position.description;
            document.getElementById('modal-address').innerText = company.address;
            document.getElementById('modal-phone').innerText = company.phone_number || 'ไม่ระบุ';
            document.getElementById('modal-email').innerText = company.email || 'ไม่ระบุ';

            document.getElementById('company-details-modal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('company-details-modal').style.display = 'none';
        }

        function filterCompanies() {
            var searchInput = document.getElementById('search-input').value.toLowerCase();

            var filteredCompanies = companies.filter(function (company) {
                return company.name.toLowerCase().includes(searchInput) || company.positions.some(function (position) {
                    return position.position_name.toLowerCase().includes(searchInput);
                });
            });

            createCompanyTable(filteredCompanies);
        }

        createCompanyTable(companies);
    </script>
